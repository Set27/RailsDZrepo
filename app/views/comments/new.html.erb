<h1>Create new comment</h2>

<%= form_with model: @comment do |form| %>
    <div>
         <%= form.label :post_id, "User" %><br>
         <%= form.select :user_id, User.pluck(:login,:id) %>
    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </div>

    <div>
         <%= form.label :post_id %><br>
         <%= form.select :post_id, Post.pluck(:title,:id) %>
    </div>

    <div>
        <%= form.submit value = "Save" %>
    </div>

<% end %>