<h2>Posts</h2>
<table class="table">
    <thead>
        <tr>
            <th class="col">#</th>
            <th class="col">Author</th>
            <th class="col">Post title</th>
            <th class="col">Post body</th>
            <th class="col">Tags</th>
        </tr>
    </thead>
    <% @posts.each do |post| %>
        <tr>
            <th><%= post.id %></th>
            <th>
                <%= link_to post.user.login, user_path(post.user), class: "link-info" %>
            </th>
            <th>
                <%= link_to post.title, post %>
            </th>
            <th>
                <%= post.body %>
            </th>
            <th>
                <% post.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
    <% unless tag == post.tags.last %>
      ,
    <% end %>
  <% end %>
            </th>
        </tr>
        <%end%>
</table>