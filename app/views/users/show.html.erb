<h2 div class="d-inline-flex">Profile <%= @user.email %></h2>
<div class="d-inline-flex ">
    <% if current_user == @user %>
            <%= link_to "Log out" , destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-danger" %>
        <% else %>
            <%= link_to "Subscribe" , destroy_user_session_path, class: "btn btn-primary d-inline-flex" %>
    <% end %>
</div>